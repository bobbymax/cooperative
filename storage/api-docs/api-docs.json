                        }
                    },
                    {
                        "name": "permissions",
                        "in": "query",
                        "description": "A checkbox of permissions",
                        "required": true,
                        "schema": {
                            "type": "list"
                        }
                    },
                    {
                        "name": "isSuper",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "not found"
                    },
                    "403": {
